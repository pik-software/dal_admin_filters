# editorconfig.org
# дополнено из https://github.com/django/django/blob/master/.editorconfig
root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# 4 space indentation
[*.py]
max_line_length = 119

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.yml]
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

[**/admin/js/vendor/**]
indent_style = ignore
indent_size = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

# Batch files use tabs for indentation
[*.bat]
indent_style = tab

[package.json]
indent_size = 2

[*.sql]
indent_size = 2
